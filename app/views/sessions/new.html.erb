<div class="hero-unit">
<h1>Sign In</h1>
	<br />
	<%= form_tag sessions_path do %>
		<div class="field">
			<%= label_tag(:email, "Email: ") %>
			<%= text_field_tag(:email) %>
		</div>
		<div class="field">
			<%= label_tag(:password, "Password: ") %>
			<%= password_field_tag(:password) %>
		</div>
		<div class="submit">
			<%= submit_tag("Log In", :class => "btn btn-primary") %>
		</div>
	<% end %>
</div>